{
  "name": "voker",
  "version": "0.1.1",
  "repository": "fitiskin/voker",
  "license": "MIT",
  "main": "./dist/index.js",
  "module": "./dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "bunchee src/index.ts --no-sourcemap",
    "prepublishOnly": "npm run clean && npm run build",
    "types:check": "tsc --noEmit --project tsconfig.check.json && tsc --noEmit -p test",
    "format": "prettier --write ./**/*.ts",
    "lint": "eslint . --ext .ts --cache",
    "lint:fix": "npm run lint --fix",
    "test": "jest --coverage",
    "prepare": "husky install",
    "ci": "npm-run-all types:check lint && npm run test",
    "hooks:pre-commit": "lint-staged",
    "hooks:pre-push": "npm run types:check"
  },
  "devDependencies": {
    "@swc-node/jest": "^1.4.3",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "bunchee": "^1.7.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.1.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.5.4"
  }
}
